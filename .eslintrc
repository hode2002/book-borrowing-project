{
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"],
                "moduleDirectory": ["node_modules", "./"]
            }
        }
    },
    "extends": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "always",
                "semi": false,
                "trailingComma": "es5",
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 80,
                "jsxSingleQuote": false
            }
        ]
    }
}
